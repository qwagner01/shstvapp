html(lang='en')
  head
    meta(charset='utf-8')
    title Staples High School TV
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='SHS TV App')
    meta(name='author', content='')

    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='../assets/css/bootstrap.min.css')
    link(rel='stylesheet', href='../css/custom-theme/my.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')

  body
    header#overview.bs-header
      .jumbotron.text-center(style='margin-bottom:0')
        - if (schedule[0].letter=="A") { var article = "an"} else { var article = "a" }
            h1 It is #{article} #{schedule[0].letter} day.

          -/* special schedule stuff
            && info[0].special == 'No' || 'no'
            - if (info[0].special == 'Yes' || 'yes')
            h1 It is a special schedule.
             - if else (info[0].specialSchedule == 'No' || 'no')
          -*/
    #layout.container(style='margin-top:30px')
    #carousel-example-generic.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#carousel-example-generic', data-slide-to='0')
          li(data-target='#carousel-example-generic', data-slide-to='1')
          li(data-target='#carousel-example-generic', data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(role='listbox')
          .item.active
            img(src='public/images/shswebapptestimage1.jpg', alt='Slide 1')
            .carousel-caption
              | image 1
          .item
            img(src='public/images/shswebapptestimage2.jpg', alt='Slide 2')
            .carousel-caption
              | image 2
          .item
            img(src='public/images/shswebapptestimage3.jpg', alt='Slide 3')
            .carousel-caption
              | image 3
    #layout.container-px-lg-5
      table.table.table-bordered
        thead
          tr
            th(scope='col') Period
            th(scope='col') Start Time
            th(scope='col') End Time
         tbody
          - for (i=0;i<schedule[0].num;i++)
            tr
            th(scope='row') #{schedule[i].period}
            td #{schedule[i].start}
            td #{schedule[i].end}

      .col-sm-12
        span.icon-info-sign
        section#block-documentation
          .page-header
          .row.justify-content-md-center
            iframe(width="560" height="315" src="https://www.youtube.com/embed/"+info[0].video+"?autoplay=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
      br
    .jumbotron.text-center(style='margin-bottom:0', content='width=device-width, initial-scale=1.0')
      .scroll-left(width='screen-width')
        p Important News and Announcements
    script(src='/javascripts/getTime.js', type='text/javascript')
    script(src='/assets/js/vendor/jquery-1.9.1.min.js', type='text/javascript')
    script(src='/assets/js/vendor/jquery-migrate-1.2.1.min.js', type='text/javascript')
    script(src='/assets/js/vendor/bootstrap.js', type='text/javascript')
    script(src='/assets/js/vendor/holder.js', type='text/javascript')
    script(src='/assets/js/vendor/jquery-ui-1.10.3.custom.min.js', type='text/javascript')
    script(src='/assets/js/google-code-prettify/prettify.js', type='text/javascript')
    script(src='/assets/js/docs.js', type='text/javascript')
    script(src='/assets/js/demo.js', type='text/javascript')
