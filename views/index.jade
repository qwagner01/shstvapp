    meta(name='author', content='')
    // Le styles
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
  body
    .container
      h1 Staples High School TV
      p.lead Welcome to Staples High School!
    #layout.container
      table.table.table-bordered
        thead
          tr
            th(scope='col') Period
            th(scope='col') Start Time
            th(scope='col') End Time
        tbody
          tr
            th(scope='row') 1
            - var timeStart = "9:30";
            td #{timeStart}
            td 8:20
          tr
            th(scope='row') 2
            td time start
            td time end
      .alert.alert-info
        span.icon-info-sign
        section#block-documentation
          .page-header
            h1
              span.label.label-default
              | SHS TV Live!
          .embed-responsive.embed-responsive-21by9
            iframe.embed-responsive-item(src='...')
